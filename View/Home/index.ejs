    <main>
      <div id="descriptionMomentJSContainer">
        <h1 style="text-align: center;font-family: arial;">FALTAM APENAS</h1>
        <div id="contador"></div>
      </div>
      <div id="CenarioContainer">
       
        <div id="FestivalContainer"><img src="img/FestivalCores.png" style="width:90%; height:450px"></div>
      </div>
      <h1 class="bigText">QUER RECEBER ATUALIZAÇÕES?</h1>
      <form class="form4Updates" data-anime="left">
       
        <div>
          
          <input type="email" id="email" placeholder="insira o seu email" />
        </div>

        <button type="submit" id="button">Enviar</button>
        <div>
         
        </div>
      </form>

      <div id="tablewithEvents">

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Evento</th>
            <th scope="col">preço do ingresso</th>
            <th scope="col">Data</th>
          </tr>
        </thead>
        <tbody>
                <% for(var i = 0; i < festivais.length; i++){%>

            

            <tr>
                <td><%= i + 1%></td><td> <strong><%= festivais[i].nome%></strong></td>
                <td><%= festivais[i].valor_ingresso %>R$</td>
                <td><%= moment(festivais[i].date).format( 'DD/MM/YYYY') %></td>
                <td><button onclick="test('<%= festivais[i]._id %>')">X</td>
                
            </tr>

            <%  }%>
          </tbody>

      </table>

    </div>
      <button id="cadastroButton" >cadastrar novos eventos</button>
      
